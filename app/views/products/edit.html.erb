<h1 class="display-4 text-primary">マイリスト編集</h1>

<%= form_for(@product, url: {controller: 'products', action: 'update'}) do |f| %>
  <div class="form-group"> 
    <label for="created_at">日付</label>
    <%= f.date_field :created_at, class:"form-control"%>
  </div>
  <div class="form-group"> 
    <label for="name">商品名</label>
    <%= f.text_field :name, class:"form-control"%>
  </div>
  <div class="form-group"> 
    <label for="maker_name">メーカー名</label>
    <%= f.text_field :maker_name, class:"form-control"%>
  </div>
  <div class="form-group"> 
    <label for="price">金額</label>
    <%= f.number_field :price, min:0, class:"form-control"%>
  </div>
  <div class="form-group"> 
    <label for="note">メモ</label>
    <%= f.text_field :note, class:"form-control"%>
  </div>
  <div class="form-group"> 
    <label for="evaluation">評価</label>
    <%= f.select :evaluation, [ ["要検討", 1], ["検討", 2], ["普通", 3], ["欲しい", 4], ["すごく欲しい", 5] ] , class:"form-control" %>
  </div>
  <div class="form-group"> 
    <%= f.submit "更新", class: "btn btn-primary" %>
  </div>


<% end %>
