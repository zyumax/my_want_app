
<h1 class="display-4 text-primary">マイリスト</h1>

<div class="sum-price"> 
  <label>合計金額：</label>
  <%= number_to_currency(@total_price, unit: "¥", precision: 0) %>
</div>

<p><%= link_to '+ 新規', new_product_path, class: "btn btn-primary" %></p>

<div class="container">
  <div class="row">
    <% @products.each do |product| %>
      <div class="card-body">
        <h3 class="card-title"><%= product.name %></h5>
        <h3 class="card-subtitle"><%= number_to_currency(product.price, unit: "¥", precision: 0) %></h6>
        <h4 class = "star-eva"><%= if product.evaluation == 1
            "★☆☆☆☆"
          elsif product.evaluation == 2
            "★★☆☆☆"
          elsif product.evaluation == 3
            "★★★☆☆"
          elsif product.evaluation == 4
            "★★★★☆"
          else product.evaluation == 5
            "★★★★★"
          end %></h4>
        <p><%#= link_to 'マイリスト詳細', product_path(product), method: :get, local: true %></p>
        <p><%= link_to '編集', edit_product_path(id: product.id, sugie: "sugie"), method: :get, local: true %></p>
        <p><%= link_to '- 削除', product_path(product.id), method: :delete, local: true %></p>
      </div>
    <% end %>
  </div>
</div>
<p><%= link_to '予測画面(仮)', products_predict_path, class: "btn btn-success" %></p> 

<% if user_signed_in? %>
  <p><%= link_to 'サインアウト', destroy_user_session_path, method: :delete %></p>
<% end %>